<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<HBox xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cafeboard.client.UiController">
    <StackPane xmlns="http://javafx.com/javafx">
        <ImageView fitHeight="889.0" fitWidth="643.0" preserveRatio="true">
            <image>
                <Image url="@images/background.png" />
            </image>
        </ImageView>

        <VBox alignment="CENTER_RIGHT" spacing="5" style="-fx-padding: 20;" StackPane.alignment="TOP_RIGHT">
            <ImageView fx:id="milkshake" fitHeight="172.0" fitWidth="172.0">
                <image>
                    <Image url="@images/milkshake.png" />
                </image>
            </ImageView>
            <ImageView fx:id="jelly" fitHeight="161.0" fitWidth="159.0">
                <image>
                    <Image url="@images/jelly.png" />
                </image>
                <VBox.margin>
                    <Insets right="10.0" />
                </VBox.margin>
            </ImageView>
            <ImageView fx:id="cake" fitHeight="164.0" fitWidth="175.0">
                <image>
                    <Image url="@images/cake.png" />
                </image>
            </ImageView>
         <StackPane.margin>
            <Insets top="200.0" />
         </StackPane.margin>
        </VBox>

        <VBox alignment="CENTER_LEFT" prefHeight="738.0" prefWidth="569.0" spacing="5" StackPane.alignment="TOP_LEFT">
            <ImageView fx:id="coffee" fitHeight="138.0" fitWidth="122.0">
                <image>
                    <Image url="@images/coffee.png" />
                </image>
                <VBox.margin>
                    <Insets left="55.0" top="100.0" />
                </VBox.margin>
            </ImageView>
            <ImageView fx:id="pancake" fitHeight="172.0" fitWidth="172.0">
                <image>
                    <Image url="@images/pancake.png" />
                </image>
                <VBox.margin>
                    <Insets left="22.0" />
                </VBox.margin>
            </ImageView>
         <StackPane.margin>
            <Insets left="-15.0" top="200.0" />
         </StackPane.margin>
        </VBox>

        <VBox fx:id="menuItems" alignment="TOP_RIGHT" prefWidth="614.0" spacing="7" style="-fx-padding: 60 20 20 20;" StackPane.alignment="TOP_RIGHT">
         <StackPane.margin>
            <Insets />
         </StackPane.margin></VBox>

        <Button fx:id="faveButton" text="Filter by Favourite" StackPane.alignment="TOP_RIGHT">
            <StackPane.margin>
                <Insets right="20.0" top="20.0" />
            </StackPane.margin>
        </Button>
        <Label style="-fx-font-weight: bold" text="Mark Items as Favourite by clicking on them. Special/Limited Offers are marked with a star." StackPane.alignment="BOTTOM_CENTER">
            <StackPane.margin>
                <Insets bottom="100.0" />
            </StackPane.margin>
        </Label>
    </StackPane>
</HBox>
